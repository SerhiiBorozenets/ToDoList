<div class="container" style="max-width: 400px;">
  <div class="card mb-4 mt-4  bg-light mx-auto" style="max-width: 400px;">
    <div class="row ml-5 mb-4 mt-4 text-info">
      <div class="col-auto mb-4 mt-4">
            <h3 class="text-center text-info">Login</h3>
            <div class="form-group">

              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                <div class="form-group">
                  <%= f.label :email, class: "text-info" %><br />
                  <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
                </div>

                <div class="form-group">
                  <%= f.label :password, class: "text-info" %><br />
                  <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
                </div>

                <% if devise_mapping.rememberable? %>
                  <div class="form-group">
                    <%= f.label :remember_me, class: "text-info" %>
                    <%= f.check_box :remember_me %>
                  </div>
                <% end %>

                <div class="form-group">
                  <%= f.submit "Log in", class: "btn btn-info btn-md" %>
                </div>
              <% end %>

            </div>
      </div>
    </div>
  </div>
</div>

