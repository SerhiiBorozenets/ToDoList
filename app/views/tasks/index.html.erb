<div class="card">
    <div class="card-header">
      <%= render 'form_index' %>
    </div>

      <table class="table table-bordered">
      <tbody>
      <% @tasks.each do |task| %>

          <% if task.completed %>

          <tr class="table-secondary d-flex">
            <td class="col-1">Done</td>
            <td class="col-8 striker"><%= link_to task.name,  edit_task_path(task) %></td>
            <td class="col-3">
             <%= task.status %>
             <%= link_to 'Edit', edit_task_path(task), class: "btn btn-sm btn-outline-info" %>
             <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger" %>
            </td>

          <% else %>
            <tr class="d-flex">
              <td class="col-1"> In work </td>
              <td class="col-8"><%= link_to task.name,  edit_task_path(task) %></td>
            <td class="col-3">
              <%= task.status %>
              <%= link_to 'Edit', edit_task_path(task), class: "btn btn-sm btn-outline-info" %>
              <%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-outline-danger" %>
            </td>
          <% end %>

        </tr>
      <% end %>
      </tbody>
    </table>

    <br>
  </div>
</div>







