<%= form_for @task do |form| %>

  <div class="form-row align-items-center">

    <%= form.hidden_field :project_id, value: @project.id %>

    <div class="col-10">

      <%= form.text_field :name, class: "form-control mr-2 sr-only-focusable", placeholder: "Start typing here to create a task...", required: true %>

    </div>

    <div class="col-2">

      <%= form.submit "Add Task", class: "btn btn-success my-2 sr-only-focusable" %>

    </div>

<% end %>